@model IEnumerable<LocadoraDigitalMVC.Entities.Locacao>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Locacoes", FormMethod.Get))
    {
    <p>
        Cliente: @Html.DropDownList("nomeCliente", "All")
        Filme: @Html.DropDownList("nomeFilme", "All")
        Locação: @Html.TextBox("dtLocacao")
        Devolução: @Html.TextBox("dtDevolucao")
        <br />
        <input type="submit" value="Buscar" />
    </p>
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Filme.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dtLocacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dtDevolucao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Filme.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dtLocacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dtDevolucao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Devolução", "Devolucao", new { id=item.Id })
        </td>
    </tr>
}

</table>
